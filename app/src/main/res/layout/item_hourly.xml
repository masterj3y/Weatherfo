<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hourlyItemWidth"
    android:layout_height="@dimen/hourlyItemHeight"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/item_hourly_icon"
        tools:src="@drawable/ic_weather_clear_sky_morning"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hourlyItemImageHeight"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/item_hourly_icon"
        app:layout_constraintBottom_toTopOf="@id/item_hourly_time"
        android:id="@+id/item_hourly_temp"
        tools:text="@string/sample_temp"
        style="@style/AppTheme.hourlyItem.tempTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/item_hourly_temp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_hourly_time"
        tools:text="@string/sample_time"
        style="@style/AppTheme.hourlyItem.timeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>