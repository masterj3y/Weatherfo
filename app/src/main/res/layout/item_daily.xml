<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dailyItemHeight">
    <TextView
        android:id="@+id/item_daily_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_daily_icon"
        tools:text="@string/sample_day"
        style="@style/AppTheme.dailyItem.primaryText"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        app:layout_constraintStart_toEndOf="@id/item_daily_day"
        app:layout_constraintEnd_toStartOf="@id/item_daily_temp"
        app:layout_constraintHorizontal_bias="0.9"
        android:id="@+id/item_daily_icon"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:src="@drawable/ic_weather_clear_sky_morning"
        android:layout_width="@dimen/dailyItemHeight"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_daily_temp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@id/item_daily_icon"
        tools:text="@string/sample_temp"
        style="@style/AppTheme.dailyItem.primaryText"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>